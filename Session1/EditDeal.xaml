<Window x:Class="Session1.EditDeal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session1"
        mc:Ignorable="d"
        Title="Add" Height="250" Width="270" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <StackPanel Margin="20, 10">
        <Label>Потребность</Label>
        <ComboBox x:Name="demandCombo" HorizontalAlignment="Left"
                 Width="160"/>

        <Label>Предложение</Label>
        <ComboBox x:Name="supplyCombo" HorizontalAlignment="Left"
                 Width="160"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20, 60">
            <Button x:Name="Edit" Style="{StaticResource Primary Button}"
                    Content="Изменить" Width="80" Height="25" Click="Edit_Click"/>
            <Button x:Name="btnCancel" Style="{StaticResource Normal Button}"
                    Content="Отмена" Width="80" Height="25" Margin="10, 0" Click="btnCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>